<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.acharkit.android.demo">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".test.TestFragment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.TestViewPager"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.TestIntroPager"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.TestUtils"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.TestDialog"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.TestCarouselPager"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.TestImageLoader"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.TestGif"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.TestProgress"
            android:screenOrientation="portrait" />
        <activity
            android:name=".test.TestBottomTab"
            android:screenOrientation="portrait" />
    </application>
</manifest>